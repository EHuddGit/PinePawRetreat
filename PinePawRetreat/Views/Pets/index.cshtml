
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<body class="bg-light">
    <h2 class="text-center">Manage Pets</h2>
    <div class="card w-75 mx-auto">
        <div class="card-body d-flex align-items-start">
            <div style="width: 180px; margin-right: 1.5rem;">
                <img src="http://www.fillster.com/images/pictures/10p.jpg"
                     alt="Dog"
                     class="rounded"
                     style="width: 100%; height: 180px; object-fit: cover;" />
            </div>
            <div class="flex-grow-1">
                <div class="fw-bold fs-5 mb-1">Animal Name</div>
                <div class="text-muted mb-2"> Breed: Golden · Age: 7</div>
                <div class="mb-2">
                    <span class="badge text-bg-success">Boarding-Ready</span>
                </div>
                <div class="text-muted mb-3"> Next stay: Mar 10 – Mar 15</div>
                <div class="d-flex gap-2">
                    <a href="#" class="btn btn-primary btn-sm">View Pet</a>
                    <a href="#" class="btn btn-outline-secondary btn-sm">Edit Pet</a>
                </div>
            </div>
        </div>
    </div></body>
</html>



