@model PinePawRetreat.ViewModels.PetVM
@{
    ViewBag.Title = "_PetCard";
}

<div class="card mb-3">
    <div class="card-body">
        <div class="fw-bold fs-5 mb-1">@Model.Name</div>

        <!-- Core info -->
        <div class="text-muted mb-2">
            Breed: @Model.Breed · Age: @Model.Age · Sex: @Model.Sex · Weight: 42 lbs
        </div>
        <!-- Management info -->
        <div class="text-muted mb-1">
            Boarding status: Boarding Ready
        </div>
        <div class="text-muted mb-1">
            Vaccines: Up to date
        </div>
        <div class="text-muted mb-1">
            Medications: Yes
        </div>
        <div class="text-muted mb-2">
            Special care: None
        </div>

        <div class="text-muted mb-3">
            Next stay: @Model.NextStay
        </div>

        <div class="d-flex gap-2">
            @Html.ActionLink("View Pet", "ViewPet", "Pets", new { petId = Model.petID }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Edit Pet", "EditPet", "Pets", new { petId = Model.petID }, new { @class = "btn btn-outline-secondary btn-sm" })
        </div>
    </div>
</div>
