
@model PinePawRetreat.ViewModels.ContactUsSubmissionVM
@{
    ViewBag.Title = "ContactForm";
}

<h2>ContactForm</h2>

@using (Html.BeginForm("ContactForm", "ContactUs", FormMethod.Post))
{
    <div class="form-group">
        <label>First Name</label>
        @Html.TextBoxFor(x => x.NameFirst, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Last Name</label>
        @Html.TextBoxFor(x => x.NameLast, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Phone Number (optional)</label>
        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Reason</label>
        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
        <small id="emailHelp" class="form-text text-muted">Reason for contact</small>
    </div>

    <div class="form-group">
        <label>Message</label>
        @Html.TextAreaFor(x => x.Message, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}
